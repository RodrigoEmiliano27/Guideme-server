@using GuideMeServerMVC.Models
@model EstabelecimentoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //enctype="multipart/form-data"
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2 class="display-2">Cadastro de Estabelecimento</h2>
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @if (Model.Id > 0)
                    {
                        <div class="form-group">
                            <label for="Nome" class="control-label">Nome</label>
                            <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                            <input hidden type="text" Name="Id" value="@Model.Id" class="form-control" />
                        </div>
                        <br />
                        <input type="submit" value="Salvar" class="btn btn-primary rounded-pill px-3" />
                    }
                    else
                    {
                        <div class="form-group">
                            <label for="Nome" class="control-label">Nome</label>
                            <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <br />
                        <input type="submit" value="Criar novo estabelecimento" class="btn btn-primary rounded-pill px-3" />
                    }
                    &nbsp;&nbsp;&nbsp;
                    <a asp-controller="UsuarioEstabelecimento" asp-action="Index" class="btn btn-secondary rounded-pill px-3">Voltar</a>
                    <br />
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

