@model List<LugaresViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Relação de Lugares Cadastrados</h2>

            <br />
            <a href="/Lugares/Create">Novo Registro</a>
            <br />

            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th scope="col">Tag</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LugaresViewModel a in Model)
                    {
                        <tr>
                            <td>@a.TAG_id</td>
                            <td>@a.Nome</td>
                            <td>@a.Descricao</td>
                            <td>
                                <a href="Lugares/Edit?id=@a.Id" class="btn btn-info">Editar</a>
                                <a href="javascript:apagarRegistro(@a.Id, 'Lugares')" class="btn btn-danger">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>              
            </table>
        </div>
    </div>
</div>
<style>
    .container {
        /*background-color: #145DA0;*/
        padding: 20px;
    }

    h2 {
        color: #0C2D48;
    }

    table {
        border-collapse: collapse;
        border: 1px solid #0C2D48;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #145DA0;
        padding: 5px;
    }

    th {
        background-color: #145DA0;
        color: #fff;
    }

    a {
        color: #0C2D48;
    }

        a:hover {
            color: #2E8BC0;
        }

    button {
        background-color: #2E8BC0;
        color: #fff;
        border: none;
        border-radius: 4px;
        margin-top: 5px;
    }

        button:hover {
            background-color: #0C2D48;
        }

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #c7effc;
    }
</style>



