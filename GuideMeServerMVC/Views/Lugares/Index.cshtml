
@model List<LugaresViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Relação de Lugares Cadastrados</h2>

            <div style="text-align: center; margin-top:16px">
                <a class="btn btn-primary rounded-pill px-3" href="/Lugares/Create">Novo Registro</a>
            </div>

            <table class="table-responsive table-striped" style="text-align: center; width:100%; margin-top:16px">
                <thead>
                    <tr>
                        <th scope="col">Tag</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LugaresViewModel a in Model)
                    {
                        <tr>
                            <td>@a.TAG_id</td>
                            <td>@a.Nome</td>
                            <td>@a.Descricao</td>
                            <td>
                                <a href="Lugares/Edit?id=@a.Id" class="btn btn-info">Editar</a>
                                <a href="javascript:apagarRegistro(@a.Id, 'Lugares')" class="btn btn-danger">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>              
            </table>
        </div>
    </div>
</div>

<style>
    tbody tr:nth-child(odd) {
        background-color: #ade8f4;
    }

    tbody tr:nth-child(even) {
        background-color: #caf0f8;
    }

    tbody tr {
        background-image: url(noise.png);
    }

    table {
        background-color: #00b4d8;
        border-collapse: collapse;
        border: 1px solid #0C2D48;
    }

    th, td {
        border: 1px solid #03045e;
        padding: 5px;
    }
</style>



