@using GuideMeServerMVC.Models
@model TagViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //enctype="multipart/form-data"
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div>
        <h2>Edição de Tag</h2>
        <form asp-action="UpdateTag" method="post">
            <div class="row g-3">
                <div class="col-sm-12">
                    <label for="TagId" class="form-label">Id da Tag</label>
                    <input type="text" Name="TagId" value="@Model.TagId" class="form-control" />
                    <span asp-validation-for="TagId" class="text-danger"></span>
                </div>
                <div class="col-sm-12">
                    <label for="EstabelecimentoId" class="form-label">Id do Estabelecimento</label>
                    <input type="text" Name="EstabelecimentoId" value="@Model.EstabelecimentoId" class="form-control" />                   
                    <span asp-validation-for="EstabelecimentoId" class="text-danger"></span>
                </div>
                <div class="col-sm-12">
                    <label for="tipoTag" class="form-label">Tipo da Tag</label>
                    <select class="form-select" id="tipoTag" Name="tipoTag">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <div class="col-sm-12">
                    <label for="Nome" class="form-label">Nome</label>
                    <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <input hidden type="text" Name="Id" value="@Model.Id" class="form-control" />
            <br />

            <input type="submit" value="Salvar" class="btn btn-primary rounded-pill" />
            
            &nbsp;&nbsp;&nbsp;
            <a asp-controller="Tag" asp-action="ExibirTagsEstabelecimento" class="btn btn-secondary rounded-pill px-3">Voltar</a>
            <br />
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

