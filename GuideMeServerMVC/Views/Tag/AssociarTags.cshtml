@using  GuideMeServerMVC.TO
@model CadastrarAssociacaoTagsTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Associação de Tags</h2>
<form asp-action="Save" method="post">
    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
    <input type="hidden" name="Itens" value="@Model.TagsDiponiveis" />

    <label for="TagPrincipalSelecionada" class="control-label">Tag principal</label>
    <select asp-for="TagPrincipalSelecionada" asp-items="@Model.TagsDiponiveis" class="form-control"> </select>
    <span asp-validation-for="TagPrincipalSelecionada" class="text-danger"></span>
    <br />

    <label for="TagPrincipalSecundaria" class="control-label">Tag Secundaria</label>
    <select asp-for="TagSecundariaSelecionada" asp-items="@Model.TagsDiponiveis" class="form-control"> </select>
    <span asp-validation-for="TagSecundariaSelecionada" class="text-danger"></span>
    <br />

    <label for="DirecaoSelecionada" class="control-label">Tag Secundaria</label>
    <select asp-for="DirecaoSelecionada" asp-items="@Model.DirecoesDisponiveis" class="form-control"> </select>
    <span asp-validation-for="DirecaoSelecionada" class="text-danger"></span>
    <br />

    <input type="submit" value="Associar Tags" class="btn-info" />
    &nbsp;&nbsp;&nbsp;
    <a href="#" onclick='javascript:history.back(-1);' class="btn-light">Voltar</a>
    <br />
</form>
