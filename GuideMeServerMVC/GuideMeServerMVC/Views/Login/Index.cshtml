@using GuideMeServerMVC.Models
@model LoginRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div >
    <h2>Login</h2>
    <form asp-action="FazLogin" method="post" enctype="multipart/form-data">

        <label for="login" class="control-label">Login</label>
        <input type="text" Name="login" value="@Model.UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        <br />

        <label for="sennha" class="control-label">Senha</label>
            <input type="password" Name="senha" value="@Model.Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        <br />

        <input type="submit" value="Logar" class="btn-info" />
        &nbsp;&nbsp;&nbsp;
        <a href="/Home/index" class="btn-light">Voltar</a>
        <br />
    </form>
    </div>
</body>

